<div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">Your Bookings
                    <small></small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="index.html">Home</a>
                    </li>
                    <li class="active">My Bookings</li>
                 </ol>
            </div>
        </div>
        <!-- /.row -->

    @model  IEnumerable<TermProject.Models.Booking>
    @foreach (var a in Model)
    {
    <h4>Bookings</h4>
            <form action="/Booking/DeleteBooking" class="form-horizontal" role="form">

               <input type="hidden" value="@a.Id" name="Id" />
                <input type="hidden" value="@a.RoomId" name="RoomId" />
                <input type="hidden" value="@a.NoOfRoom" name="NoOfRoom" />
            <div class="form-group">
                <label class="control-label col-md-3" >Name:</label>
                <label class="control-label col-md-3" >@a.Hotel.Name</label>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Check In Date:</label>
                <label class="control-label col-md-3">@a.CheckIn</label>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Check Out</label>
                <label class="control-label col-md-3">@a.CheckOut</label>
            </div>
            
            <div class="form-group">
                <label class="control-label col-md-3" >Room Type:</label>
                <label class="control-label col-md-3" >@a.Room.Type</label>
            </div>
            
            <div class="form-group">
                <label class="control-label col-md-3" >No of Rooms:</label>
                <label class="control-label col-md-3" >@a.NoOfRoom</label>
            </div>

            <div class="form-group">
                <label class="control-label col-md-3" >Total Price:</label>
                <label class="control-label col-md-3" >@a.Price Pkr</label>
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-3 col-md-10">
                    <input type="submit"  value="Delete" class="btn btn-default" />
                </div>
            </div>

        </form>



    }



        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-md-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->
