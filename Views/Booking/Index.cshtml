@model IEnumerable<TermProject.Models.Room>
@using TermProject.Models
@{User u = (User)HttpContext.Current.Session["user"]; }
<div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Room Booking
                    <small></small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="index.html">Home</a>
                    </li>
                    <li class="active">Hotels</li>
                    <li class="active">Hotel Details</li>
                    <li class="active">Room Booking</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

    
    
    
       
        <form id="roomtype" action="/Booked" method="get" class="form-horizontal" role="form">

            <input type="hidden" name="HotelId" value="@(ViewBag.id)" />
            <div class="form-group">
                <label class="control-label col-md-2" >Select Room Type</label>
                <div class="col-lg-4">
                    <select class="form-control" name="RoomId"  form="roomtype" >
                        @foreach (var s in Model) {   
                        <option value="@s.Id" >@s.Type</option>
                        }
                      </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" >Check In</label>
                <div class="col-lg-4">
                    <input type="date" class="form-control" required name="CheckIn" placeholder="dd-mm-yyyy" />
                </div>
            </div>


             <div class="form-group">
                <label class="control-label col-md-2" >Check Out</label>
                <div class="col-lg-4">
                    <input type="date" class="form-control" required name="CheckOut" placeholder="dd-mm-yyyy" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" >No of Rooms</label>
                <div class="col-lg-4">
                    <input type="text" class="form-control" required name="NoOfRoom" value="1" />
                </div>
            </div>
            
            <input type="hidden" name="UserId" value="@(u.Id)" />
            
            <input type="hidden" name="Block" value="NOT" />

            <div class="form-group ">
                <div class="col-md-offset-4 col-md-3">
                    <input type="submit" value="Conform" class="btn btn-default" />
                </div>
            </div>
        </form>
     





        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->
