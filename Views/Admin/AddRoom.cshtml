    <![endif]-->

</head>

<body>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Admin">Admin</a>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">

                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="/Admin/Logout"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">

                        <li>
                            <a href="/Admin/Index"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
                        </li>

                        <li>
                            <a href="/Admin/Users"><i class="fa fa-table fa-fw"></i>All Users</a>
                        </li>
                        <li>
                            <a href="/Admin/Places"><i class="fa fa-table fa-fw"></i> All Places</a>
                        </li>
                        <li>
                            <a href="/Admin/Booking"><i class="fa fa-table fa-fw"></i> All Bookings</a>
                        </li>
                        <li>
                            <a href="/Admin/AddPlace"><i class="fa fa-edit fa-fw"></i> Add a Place</a>
                        </li>
                        <li>
                            <a href="/Admin/FAQ"><i class="fa fa-edit fa-fw"></i> FAQs</a>
                        </li>
                        <li>
                            <a href="/Admin/Feedback"><i class="fa fa-edit fa-fw"></i> Feedback </a>
                        </li>


                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        @model TermProject.Models.Hotel
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Rooms Types for the @Model.Name</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>


            <table class="table" >
                <thead>
                    <tr>
                        <th>Room Type</th>
                        <th>Price</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in Model.Rooms)
                    {
                        <tr class="success">
                            <td>@a.Type</td>
                            <td>@a.Price</td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Add Room Types Available
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <!-- /.table-responsive -->
                           
   <div>    
        <form action="/Admin/AddedRoom" method="get" class="form-horizontal" role="form">

            <div class="form-group">
                <label class="control-label col-lg-3" for="Type">Room Rype: </label>
                <div class="col-lg-4">
                    <input type="text" class="form-control" name="Type" required placeholder="Enter Name" />
                </div>
            </div>
            
            <input type="hidden" value="@ViewBag.HotelId" name="HotelId" />
            <div class="form-group">
                <label class="control-label col-lg-3" for="Price">Price:</label>
                <div class="col-lg-4">
                    <input type="number" class="form-control" name="Price" required placeholder="Price for this room"/>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-3" for="Price">Available:</label>
                <div class="col-lg-4">
                    <input type="number" class="form-control" name="Available" required placeholder="Available Rooms" />
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-lg-offset-3 col-lg-10">
                    <input type="submit" value="Add Room type" class="btn btn-default" />
                </div>
            </div>

        </form>
    </div>


        <div>
            <form action="/Admin/AddImage" method="post" class="form-horizontal" enctype="multipart/form-data" role="form">

                Upload Image: <input type="file" multiple="multiple" name="image" />
                <input type="hidden" value="@ViewBag.HotelId" name="HotelId" />
                <div class="form-group">
                    <div class="col-lg-offset-3 col-lg-10">
                        <input type="submit" value="Upload" class="btn btn-default" />
                    </div>
                </div>

            </form>
        </div>

             <div class="form-group">
                <div class="col-lg-offset-3 col-lg-10">
                    <a class="btn btn-default col-md-3" href="/Admin">Done</a>
                </div>
            </div>


                            @foreach (var imm in Model.Images)
                            {
                                <div class="col-md-4">
                                <a href="#">
                                    <img class="img-responsive img-hover img-related" style="width:400px;height:300px" src="@("/images/hotel/" + @imm.Id + "_" + @imm.HotelId + ".jpg")" alt="">
                                </a>
                            </div>

                            }

                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
          
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="~/bower_components/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->    
    <script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/bower_components/metisMenu/dist/metisMenu.min.js"></script>

    <!-- DataTables JavaScript -->
    <script src="~/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="~/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="~/dist/js/sb-admin-2.js"></script>

    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
                responsive: true
        });
    });
    </script>

</body>

</html>


