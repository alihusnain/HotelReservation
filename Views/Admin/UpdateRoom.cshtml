        @model TermProject.Models.Hotel



        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Update Rooms</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Update Room
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">

            @foreach(var room in Model.Rooms)
            {
            <div>    
                <form action="/Admin/RoomUpdated" method="get" class="form-horizontal" role="form">

                    <div class="form-group">
                        <label class="control-label col-lg-3" for="Type">Room Rype: </label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" name="Type" value="@room.Type" />
                        </div>
                    </div>
            
                    <input type="hidden" value="@room.HotelId" name="HotelId" />
                    <input type="hidden" value="@room.Id" name="Id" />
                    <div class="form-group">
                        <label class="control-label col-lg-3" for="Price">Price:</label>
                        <div class="col-lg-4">
                            <input type="number" class="form-control" name="Price" value="@room.Price"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-3" for="Price">Available:</label>
                        <div class="col-lg-4">
                            <input type="number" class="form-control" name="Available" value="@room.Available" />
                        </div>
                    </div>
            
                    <div class="form-group">
                        <div class="col-lg-offset-3 col-lg-10">
                            <input type="submit" value="Update Room type" class="btn btn-default" />
                        </div>
                    </div>

                </form>
                <a class="btn btn-danger col-md-offset-4" href="@("/Admin/DeleteRoom/"+room.Id)">Delete this type</a>
                
            </div>
             }


               <div>
                    <form action="/Admin/AddedRoomUpdate" method="get" class="form-horizontal" role="form">

                        <div class="form-group">
                            <label class="control-label col-lg-3" for="Type">Room Rype: </label>
                            <div class="col-lg-4">
                                <input type="text" class="form-control" name="Type" placeholder="Enter Type" />
                            </div>
                        </div>

                        <input type="hidden" value="@Model.Id" name="HotelId" />
                        <div class="form-group">
                            <label class="control-label col-lg-3" for="Price">Price:</label>
                            <div class="col-lg-4">
                                <input type="number" class="form-control" name="Price" placeholder="Price for this room" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-3" for="Price">Available:</label>
                            <div class="col-lg-4">
                                <input type="number" class="form-control" name="Available" placeholder="Available Rooms" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-offset-3 col-lg-10">
                                <input type="submit" value="Add new Room type" class="btn btn-default" />
                            </div>
                        </div>

                    </form>
                </div>

                            <a class="btn btn-default col-md-offset-4" href="/Admin/Index">Done</a>

                            <h1>Images</h1>
                            @foreach(var imm in Model.Images)
                            {
                                <div class="row-border col-md-12" >
                                    <div class="col-md-6">
                                        <a href="#">
                                            <img class="img-responsive img-hover img-related" src="@("/images/hotel/" + @imm.Id + "_" + @imm.HotelId + ".jpg")" alt="">
                                        </a>
                                    </div>
                                    <a class="btn btn-danger col-md-4" href="@("/Admin/DeleteImage/"+imm.Id)" >Delete</a>
                                </div>
                            }



                            <div>
                                <form action="/Admin/AddImageUpdate" method="post" class="form-horizontal" enctype="multipart/form-data" role="form">

                                    Upload Image: <input type="file" multiple="multiple" name="image" />
                                    <input type="hidden" value="@Model.Id" name="HotelId" />
                                    <div class="form-group">
                                        <div class="col-lg-offset-3 col-lg-10">
                                            <input type="submit" value="Upload" class="btn btn-default" />
                                        </div>
                                    </div>

                                </form>
                            </div>


                        </div>

                    </div>
                </div>
            </div>
        </div>
