@{
    ViewBag.Title = "UpdateProfile";
}
@model TermProject.Models.User
<br /><br /><br /><br />
<h1>Update profile</h1>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


@using (Html.BeginForm("ProfileUpdated", "Home", FormMethod.Post, new { id = "update", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(x => x.Id )
    @Html.HiddenFor(x => x.Bolck, new { value="NOT"})
    <div class="form-group">
        @Html.LabelFor(x => x.Name, new { @for = "Name: ", @class = "col-md-3 control-label" })
        @Html.EditorFor(x => x.Name, new { @class = "form-control col-md-6", @readonly = "readonly", type = "text", title = "Email", id = "Email" })
        @Html.ValidationMessageFor(model => model.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Email, new { @for = "Name: ", @class = "col-md-3 control-label" })
        @Html.EditorFor(x => x.Email, new { @class = "form-control col-md-6", @readonly = "readonly", type = "text", title = "Email", id = "Email" })
        @Html.ValidationMessageFor(model => model.Email)
    </div><div class="form-group">
        @Html.LabelFor(x => x.Address, new { @for = "Name: ", @class = "col-md-3 control-label" })
        @Html.EditorFor(x => x.Address, new { @class = "form-control col-md-6", @readonly = "readonly", type = "text", title = "Email", id = "Email" })
        @Html.ValidationMessageFor(model => model.Address)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Phone, new { @for = "Name: ", @class = "col-md-3 control-label" })
        @Html.EditorFor(x => x.Phone, new { @class = "form-control col-md-6", @readonly = "readonly", type = "text", title = "Email", id = "Email" })
        @Html.ValidationMessageFor(model => model.Phone)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Cnic, new { @for = "Name: ", @class = "col-md-3 control-label" })
        @Html.EditorFor(x => x.Cnic, new { @class = "form-control col-md-6", @readonly = "readonly", type = "text", title = "Email", id = "Email" })
        @Html.ValidationMessageFor(model => model.Cnic)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Password, new { @for = "Name: ", @class = "col-md-3 control-label" })
        @Html.EditorFor(x => x.Password, new { @class = "form-control col-md-6", @readonly = "readonly", type = "text", title = "Email", id = "Email" })
        @Html.ValidationMessageFor(model => model.Password)
    </div>
    <div class="submit">

        <input type="submit" value="Update" class="btn btn-default col-md-offset-3" />
    </div>

}






