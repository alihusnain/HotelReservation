<script>
    function emailValidate() {
        var email = document.getElementById("Email").value;
        if ((email.indexOf('@@') < 0) || (email.indexOf('.') < 0) || (email.lastIndexOf('.') - email.lastIndexOf('@@') < 2)) {
            alert("Your entered Wrong email format");
            return false;
        }
        return true;
    }

    </script>


@using (Html.BeginForm("CheckLogin", "Home", FormMethod.Get, new { id = "login" }))
{
    
    <h1>
        Log in to your account!
    </h1>

    <div>
        @Html.LabelFor(x=>x.Email , new { @for = "login_username" })
        @Html.TextBoxFor(x => x.Email, new { @class = "field required", type = "text", title = "Please provide your Email", id = "Email" })
      
    </div>

    <div>
        @Html.LabelFor(x => x.Password, new { @for = "login_password" })
        @Html.PasswordFor(x => x.Password, new { @class = "field required", title = "Password is required", id = "Password" })
    </div>
    
    <div class="submit">

        <label style="font-size:medium;">Not Registered?</label>
        @Html.ActionLink("Register Here", "/Register", "Account", new { style = "font-size:medium;" })

        <input class="pull-right" type="submit" value="Login"onclick="return emailValidate()" style="font-size:medium;" />
    </div>

}









